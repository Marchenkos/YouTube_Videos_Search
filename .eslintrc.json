{   "parser": "babel-eslint",

    "env": {
        "browser": true,
        "commonjs": true,
        "node": true,
        "es6": true
    },
    "extends": [
        "airbnb",
        "plugin:react-redux/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-redux"
    ],
    "rules": {
        "react-redux/connect-prefer-named-arguments": 2,
        "no-console":"off",
        "semi-spacing": ["error", {"before": false, "after": true}],
        "quotes": ["error", "double"],
        "no-plusplus":"off",
        "no-unused-vars":"off",
        "max-classes-per-file":"off", 
        "prefer-rest-params":"off", 
        "eqeqeq":"off",
        "no-restricted-syntax": "off",
        "indent":["error", 4],
        "no-trailing-spaces":"error",
        "keyword-spacing":["error", { "overrides": { "if": { "after": true, "before":true}, "for": { "after": true }, "while": { "after": true } } }],
        "no-var":"error",
        "import/prefer-default-export":"off",
        "max-len":["error", 200],
        "linebreak-style": ["error", "windows"],
        "react/jsx-indent":"off",
        "react/prefer-stateless-function": "off",
        "comma-dangle": "off"
    }
}